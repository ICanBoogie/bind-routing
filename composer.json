{
	"name": "icanboogie/bind-routing",
	"type": "library",
	"description": "Binds Routing to ICanBoogie.",
	"keywords": [ "routing", "icanboogie" ],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/bind-routing/issues",
		"source": "https://github.com/ICanBoogie/bind-routing"
	},

	"require": {
		"php": ">=5.4.0",
		"icanboogie/icanboogie": ">=2.3.0",
		"icanboogie/routing": ">=2.3.0"
	},

	"autoload": {
		"psr-4": {
			"ICanBoogie\\Binding\\Routing\\": "lib/"
		}
	},

	"scripts": {
		"post-autoload-dump": "ICanBoogie\\Autoconfig\\Hooks::on_autoload_dump"
	},

	"extra": {
		"icanboogie": {
			"config-path": "config",
			"config-constructor": {
				"routes": "ICanBoogie\\Binding\\Routing\\Hooks::synthesize_routes_config"
			}
		}
	}
}
